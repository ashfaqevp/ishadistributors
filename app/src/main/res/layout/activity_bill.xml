<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D4B92FC"
    tools:context=".bill">


    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1a67d1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/Nav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#1a67d1"
            android:foregroundGravity="left"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/backbutton" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/nexa_bold"
            android:foregroundGravity="center"
            android:gravity="center"
            android:padding="17dp"
            android:text="Shop Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_gradient_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="10dp"
            android:layout_weight="3">


            <AutoCompleteTextView
                android:id="@+id/searchProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:background="@drawable/corner10_radius"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                android:drawableStart="@drawable/searchicon"
                android:fontFamily="@font/nexa_bold"
                android:padding="10dp">


            </AutoCompleteTextView>

            <EditText
                android:id="@+id/PQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/corner10_radius"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                android:fontFamily="@font/nexa_bold"
                android:hint="Qnty"
                android:inputType="number"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/ANP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/corner10_radius"
                android:backgroundTint="#FFFFFF"
                android:src="@android:drawable/ic_input_add"
                android:text="ADD"
                android:textSize="16sp"
                android:textStyle="bold"
                android:tint="#1a67d1" />


        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/hhj"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:padding="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/slctHm525"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/corner10_radius"
                    android:backgroundTint="#D8FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/nexa_bold"
                    android:text="HM 525"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/slctHm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/corner10_radius"
                    android:backgroundTint="#D8FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/nexa_bold"
                    android:text="HM 500"
                    android:textColor="#1a67d1"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/slctCurd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/corner10_radius"
                    android:backgroundTint="#D8FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/nexa_bold"
                    android:text="CURD 525"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/slctPeda"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="Peda"
                    android:background="@drawable/corner10_radius"

                    android:elevation="4dp"


                    android:layout_margin="5dp"
                    android:backgroundTint="#D8FFFFFF"
                    android:fontFamily="@font/nexa_bold"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/slctPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/corner10_radius"

                    android:elevation="4dp"
                    android:text="Plus"
                    android:layout_margin="5dp"
                    android:backgroundTint="#D8FFFFFF"
                    android:fontFamily="@font/nexa_bold"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/slctSambaram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/corner10_radius"

                    android:elevation="4dp"
                    android:text="Sambaram"
                    android:layout_margin="5dp"
                    android:backgroundTint="#D8FFFFFF"
                    android:fontFamily="@font/nexa_bold"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/slctLassi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/corner10_radius"

                    android:elevation="4dp"
                    android:text="Lassi"
                    android:layout_margin="5dp"
                    android:backgroundTint="#D8FFFFFF"
                    android:fontFamily="@font/nexa_bold"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />


                <Button
                    android:id="@+id/slctBread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/corner10_radius"

                    android:elevation="4dp"
                    android:text="Bread"
                    android:layout_margin="5dp"
                    android:backgroundTint="#D8FFFFFF"
                    android:fontFamily="@font/nexa_bold"
                    android:textColor="#1a67d1"
                    android:textSize="12sp" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/head2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#347fee"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"></LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#fafafa"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/head2">


        <ListView
            android:id="@+id/newProductList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:divider="#ffffff" />


    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:background="@drawable/corner10_radius"
        android:backgroundTint="#00033657"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_bold"
            android:text=" Total "
            android:textColor="#A9323232"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NPTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/nexa_bold"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#E44F4F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#00D81A60"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="#00b09c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_save" />


</androidx.constraintlayout.widget.ConstraintLayout>